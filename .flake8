[flake8]
# Configuração do Flake8 para SwitchPilot
max-line-length = 120
max-complexity = 15

# Pastas a ignorar
exclude = 
    .git,
    __pycache__,
    .venv,
    .venv310,
    env,
    venv,
    build,
    dist,
    archive,
    release_*,
    *.egg-info

# Ignorar alguns erros específicos
# E203: whitespace before ':'
# W503: line break before binary operator
# W504: line break after binary operator (conflita com W503)
# E501: line too long (já controlado por max-line-length)
# F541: f-string sem placeholders (não é erro real)
# E702: múltiplos statements com ; (permitido em lambdas simples)
# E704: múltiplos statements em def (permitido em funções inline)
ignore = 
    E203,
    W503,
    W504,
    E501,
    F541,
    E702,
    E704

# Configurações por arquivo
# __init__.py: F401=imports não usados, F403=wildcard imports
# main.py: E402=imports após código
# *_controller.py: F401=imports usados dinamicamente, C901=funções complexas
# *_window.py: F401=imports usados dinamicamente, F811=reimports intencionais, F841=variáveis debug, C901=complexidade UI
# reference_manager.py: C901=funções complexas (refatorar no futuro)
# action_config_dialog.py: C901=funções complexas, F841=variáveis não usadas em except
# custom_title_bar.py: F401=imports não usados (usados via reflection)
# monitoring_control_widget.py: F401=imports não usados, F821=QTextEdit usado dinamicamente, F811=reimport intencional
per-file-ignores =
    __init__.py:F401,F403
    main.py:E402
    switchpilot/core/main_controller.py:F401,C901
    switchpilot/core/monitor_thread.py:F401,C901
    switchpilot/integrations/*_controller.py:F401,C901
    switchpilot/ui/main_window.py:F401,F811,F841,C901
    switchpilot/ui/widgets/reference_manager.py:C901
    switchpilot/ui/widgets/action_config_dialog.py:C901,F841
    switchpilot/ui/widgets/custom_title_bar.py:F401
    switchpilot/ui/widgets/monitoring_control_widget.py:F401,F821,F811
